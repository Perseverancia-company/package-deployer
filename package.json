{
	"name": "@perseverancia/package-deployer",
	"version": "3.3.1",
	"description": "Package deployer installs, builds and publishes packages",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"pkgdep": "./dist/cli/index.js"
	},
	"files": [
		"dist",
		"defaultPackageDeployerConfiguration.yaml",
		"README.md",
		"LICENSE",
		"CHANGELOG.md"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"default": "./dist/index.js"
		},
		"./cli": "./dist/cli/index.js",
		"./package.json": "./package.json"
	},
	"type": "module",
	"scripts": {
		"cli": "tsx ./src/cli/index.ts",
		"build": "tsup"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/FelixRiddle/package-deployer.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/FelixRiddle/package-deployer/issues"
	},
	"homepage": "https://github.com/FelixRiddle/package-deployer#readme",
	"dependencies": {
		"@octokit/rest": "^22.0.1",
		"axios": "^1.13.4",
		"dotenv": "^17.2.3",
		"p-limit": "^7.3.0",
		"picocolors": "^1.1.1",
		"postject": "^1.0.0-alpha.6",
		"semver": "^7.7.3",
		"simple-git": "^3.30.0",
		"yaml": "^2.8.2",
		"yargs": "^18.0.0"
	},
	"devDependencies": {
		"@types/node": "^24.0.0",
		"@types/semver": "^7.7.1",
		"@types/yargs": "^17.0.35",
		"tsup": "^8.5.1",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	}
}
